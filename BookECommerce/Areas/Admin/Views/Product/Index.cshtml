@using System.Runtime.InteropServices.ObjectiveC
@model List<BookECommerce.Models.Product>
<!DOCTYPE html>
<html>
<head>
    <title>title</title>
</head>
<body>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                PRODUCT LIST
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary mb-4">

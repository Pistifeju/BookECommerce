@using System.Runtime.InteropServices.ObjectiveC
@model List<BookECommerce.Models.Product>
<!DOCTYPE html>
<html>
<head>
    <title>title</title>
</head>
<body>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                PRODUCT LIST
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="CreateNewProduct" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> CREATE NEW PRODUCT
            </a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                ISBN
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Author
                </td>
                <td>
                    @obj.ISBN
                </td>
                <td>
                    @obj.Price
                </td>
                <td>
                    
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> EDIT
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> DELETE
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>